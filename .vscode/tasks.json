{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build project",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-Wall",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/out",
				"-I${workspaceFolder}/include",
				"-lsfml-window",
				"-lsfml-system",
				"-lsfml-graphics"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}